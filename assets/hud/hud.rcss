body {
    width: 100%;
    height: 100%;
}

#userInfo {
    display: inline-block;
    margin: 10dp;
    font-size: 32dp;
}

#userInfo img {
    vertical-align: middle;
    width: 32dp;
}

#radar {
    border: 1dp black;
    background: #00000066;
    position: absolute;
    bottom: 2vw;
    left: 2vw;

    height: 20vw;
    width: 20vw;
}

#console {
    border: 1dp black;

    background: #00000066;
    position: absolute;
    bottom: 2vw;
    right: 2vw;
    left: 24vw;

    height: 15vw;
    overflow: scroll;

    padding: 4dp;
}

#console div.message .name {
    font-weight: bold;
    font-effect: outline(2px black);
}

.team-rogue { color: #FFFF00; }
.team-red { color: #FF2626; }
.team-green { color: #33E533; }
.team-blue { color: #1480FF; }
.team-purple { color: #FF66FF; }
.team-observer { color: #FFFFFF; }
.team-rabbit { color: #FFFFFF; }
.team-hunter { color: #fc8c23; }
.server-message {
    color: yellow;
    font-weight: bold;
}

