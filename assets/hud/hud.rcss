table {
box-sizing: border-box;
display: table;
}
tr {
box-sizing: border-box;
display: table-row;
}
th, td {
box-sizing: border-box;
display: table-cell;
}
col {
box-sizing: border-box;
display: table-column;
}
colgroup {
display: table-column-group;
}
thead, tbody, tfoot {
display: table-row-group;
}

.ta-center { text-align: center; }
.ta-right { text-align: right; }
.mr-1 { margin-right: 10dp; }
.mr-2 { margin-right: 20dp; }


#scoreboard {
display: table;
font-weight: bold;
font-effect: glow(1px 2px black);
}
.sb-header, .sb-row {
display: table-row;
}
.sb-header > div, .sb-score, .sb-kills, .sb-divider, .sb-deaths, .sb-tks, .sb-status, .sb-restofit {
display: table-cell;
white-space: pre;
}

.sb-score, .sb-deaths, .sb-tks {
margin-right: 10px;
}
.sb-score {
text-align: right;
}
.sb-kills, .sb-tks {
text-align: right;
}

.sb-restofit {
overflow: hidden;
}

.sb-powerflag {
white-space: pre;
}
.sb-status {
    color: #40E0D0;
}


scrollbarvertical {
width: 0;
height: 0;
}
